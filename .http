@url = http://localhost:5000/api

POST {{url}}/collections
Content-Type: application/json

{
    "name": "spaces",
    "schema": [
        {
            "name": "name",
            "type": "text",
            "options": {
                "max": 50,
                "min": 5,
                "regex": "^[a-z\\s]*$",
                "unique": false,
                "required": true
            }
        },
        {
            "name": "first_name",
            "type": "text",
            "options": {
                "max": 50,
                "min": 0,
                "unique": false,
                "required": false
            }
        }
    ]
}   

